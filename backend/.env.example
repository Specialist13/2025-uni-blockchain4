# Private key for signing transactions (without 0x prefix)
# WARNING: Never commit this to version control!
# Smart Contract Addresses (deploy contracts first and update these)
BLOCKCHAIN_PRIVATE_KEY=
MARKETPLACE_CONTRACT_ADDRESS=
ESCROW_CONTRACT_ADDRESS=
COURIER_CONTRACT_ADDRESS=

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# SQLite database file path (auto-created if not exists)
# For production, consider using PostgreSQL or MySQL
DATABASE_URL=

# Authentication Configuration
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=7d

# Blockchain Configuration
# RPC URL for connecting to blockchain network (Ganache, Infura, etc.)
BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545

# Network Configuration
NETWORK_ID=*

# Gas Configuration
# Maximum gas limit for transactions (default: 5000000)
GAS_LIMIT=5000000

# Gas price in wei (optional, leave empty for automatic)
# GAS_PRICE=

# Transaction Retry Configuration
# Maximum number of retries for failed transactions (default: 3)
TRANSACTION_MAX_RETRIES=3

# Delay between transaction retries in milliseconds (default: 1000)
TRANSACTION_RETRY_DELAY_MS=1000

# Event Processing Configuration
# Maximum number of retries for failed event processing (default: 5)
EVENT_MAX_RETRIES=5

# Delay between event processing retries in milliseconds (default: 1000)
# Uses exponential backoff: delay * 2^retryCount
EVENT_RETRY_DELAY_MS=1000

# Polling interval for missed events in milliseconds (default: 15000)
EVENT_POLL_INTERVAL=15000

# Fee Configuration
# Courier fee as percentage of product price (default: 5%)
# Set to 0 to use fixed fee instead
COURIER_FEE_PERCENT=5

# Fixed courier fee in Wei (default: 0.1 ETH = 100000000000000000 Wei)
# Used when COURIER_FEE_PERCENT is 0
COURIER_FEE_FIXED_WEI=100000000000000000

# Platform fee as percentage of product price (default: 3%)
PLATFORM_FEE_PERCENT=3
